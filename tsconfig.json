{
  "compilerOptions": {
    "target": "esnext",                          
    "useDefineForClassFields": true,             
    "lib": ["dom", "dom.iterable", "esnext"],    
    "allowJs": false,                            
    "skipLibCheck": true,                        
    "strict": true,                              
    "forceConsistentCasingInFileNames": true,    
    "noEmit": true,                              
    "module": "esnext",                          
    "moduleResolution": "node",                  
    "resolveJsonModule": true,                   
    "isolatedModules": true,                     
    "jsx": "react-jsx"                           
  },
  "include": ["src"]
}
